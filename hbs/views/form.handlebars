<section class="p-4 bg-secondary">
    <h2 class="text-primary">Ingrese Producto</h2>
    <form action='/productos' method='POST'>
        <div class='mb-3'>
            <label class='form-label fw-bold' for='nombre'>Nombre</label>
            <input class="form-control" type='text' name='nombre' />
        </div>
        <div class='mb-3'>
            <label class='form-label fw-bold' for='precio'>Precio</label>
            <input class="form-control" type='number' name='precio' />
        </div>
        <div class='mb-3'>
            <label class='form-label fw-bold' for='url'>Foto URL</label>
            <input class="form-control" type='url' name='url' />
        </div>
        <div class='mb-3'>
            <input class="btn btn-success" type='submit' value='Enviar' />
        </div>
    </form>
    <div>
        <a href="./listaproductos">
            <button class="btn btn-warning">Ver Productos</button>
        </a>
    </div>
</section>