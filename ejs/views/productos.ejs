<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
    <!-- CSS only -->
    <link href="https://bootswatch.com/5/spacelab/bootstrap.min.css" rel="stylesheet"
        >
</head>

<body class="p-4">
    <section class="p-4 bg-secondary">
        <h2 class="text-primary">Vista de Productos</h2>
        <% if (productos.length===0) { %>
            <h2 class="bg-light p-4 text-danger">No se encontraron productos</h2>
            <% } else { %>
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Foto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% productos.forEach(producto=> { %>
                            <tr class="text-center">
                                <td class="align-middle">
                                    <%= producto.name %>
                                </td>
                                <td class="align-middle">
                                    <%= producto.price %>
                                </td>
                                <td class="align-middle">
                                    <img src="<%= producto.picture %>" alt="<%= producto.name %>">
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } %>
                    <div class="mt-3">
                        <a href="./productos">
                            <button class="btn btn-warning">Agregar producto</button>
                        </a>
                    </div>
    </section>
</body>

</html>